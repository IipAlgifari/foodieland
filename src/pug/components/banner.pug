//-------------------------------------
  @name: Banner item
 --------------------------------------//

.banner__item
  .container
    .banner__wrapper
      .banner__txt
        .banner__box
          button.btn.btn--bgwhite
            img.banner__subicon(src=data.subIcon)/
            | !{data.subtitle}
          h1.banner__title
            | !{data.title}
          p.banner__desc !{data.desc}
          .banner__btn
            a.btn.btn--tertiary
              | !{data.tmBtn}
            a.btn.btn--tertiary
              | !{data.catBtn}
        .banner__inner
          .banner__profile
            .banner__profile__img
              ='\n'
              img.banner__profile__img-el(src=data.avatar)/
              ='\n'
            .banner__profile__txt
              h4.banner__profile__title
                | !{data.name}
              p.banner__profile__date
                | !{data.date}
          .banner__view
            ='\n'
            a.btn.btn--primary(href='#')
              | !{data.txtBtn}
            ='\n'
      .banner__badge
        h4.banner__badge__title !{data.badgeTitle}
        ='\n'
        img.banner__badge__emot(src=data.emotImg, alt=data.title)
      .banner__img
        ='\n'
        img.banner__img__el(src=data.bgImg)/
='\n\n'
